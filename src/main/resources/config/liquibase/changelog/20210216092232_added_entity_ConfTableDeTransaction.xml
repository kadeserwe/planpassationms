            </column>
            <column name="double_value" type="double">
                <constraints nullable="true" />
            </column>
            <column name="duration_value" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="uuid_value" type="${uuidType}">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="conf_table_de_transaction" columnName="instant_value" columnDataType="datetime"/>
        <dropDefaultValue tableName="conf_table_de_transaction" columnName="zoned_date_time_value" columnDataType="datetime"/>
    </changeSet>

    <changeSet id="20210216092232-1-relations" author="jhipster">

